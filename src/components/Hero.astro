---
import heroImage from '@assets/images/hero.png';
import Button from '@components/ui/Button.astro';
import { Image } from 'astro:assets';
---

<section
	data-testid="hero"
	class="flex flex-col-reverse items-start gap-12 pt-16 lg:flex-row lg:items-center"
>
	<!-- Left: Text -->
	<div class="flex w-full flex-col gap-6 lg:w-1/2">
		<h1 class="font-monospace text-3xl text-black lg:text-5xl">
			Hi! My name is <span class="text-orange">Jane Doe</span><br />
			and I am a web developer based in New York.
		</h1>

		<p class="max-w-xl text-base text-neutral-700">
			Below are selected engineering projects focusing on embedded systems, robotics,
			FPGA-based signal processing, and control systems.
		</p>

		<Button style="primary" size="lg">Learn more</Button>
	</div>

	<!-- Right: Image -->
	<div
		data-testid="hero-img"
		class="flex w-full justify-center lg:w-1/2"
	>
		<Image
			src={heroImage}
			alt="Coding illustration"
			width={520}
			height={520}
			loading="eager"
		/>
	</div>
</section>
