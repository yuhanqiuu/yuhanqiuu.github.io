---
import projectImage from '@assets/images/project.png';
import Tags from '@components/ui/Tags.astro';
import { Image } from 'astro:assets';

interface Props {
	url?: string;
	alt?: string;
	title?: string;
	description: string;
	tags: string[];
	children?: HTMLElement | HTMLElement[];
}

const {
	url = '#',
	alt = 'Project image',
	description = 'Project description',
	title = 'Project title',
	tags = [],
} = Astro.props;
---

<!-- ❗注意：最外层不再限制宽度 -->
<section class="w-full">
	<article data-testid="card" class="bg-white
			p-4
			transition
			duration-150
			hover:shadow-lg">
		<a href={url} aria-label="link to project">
			<!-- 图片区域：灰底、固定比例、工程展示感 -->
			<div class="bg-gray-200 flex aspect-[4/3] items-center justify-center overflow-hidden">
				<Image
					src={projectImage}
					alt={alt}
					format="png"
					width={500}
					height={375}
					class="object-contain"
					loading="lazy"
				/>
			</div>

			<!-- 文本区域 -->
			<div class="mt-4 space-y-1">
				<h3 class="text-base font-semibold text-black">
					{title}
				</h3>

				<p class="text-gray-600 text-sm leading-snug">
					{description}
				</p>

				<!-- Tags 如果你想保留可以留，不想要我下一步帮你删 -->
				<Tags tags={tags} />
			</div>
		</a>
	</article>
</section>
