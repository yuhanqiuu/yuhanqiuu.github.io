---
import Footer from '@components/Footer.astro';
import Navbar from '@components/Navbar.astro';
import { SEO } from 'astro-seo';

export interface LayoutProps {
	title?: string;
}

const { title = 'Yuhan Qiu | Electrical Engineering' } = Astro.props as LayoutProps;
---

<!doctype html>
<html lang="en" data-testid="html">
	<head>
		<SEO
			title={title}
			description="Electrical engineering, robotics, and embedded systems portfolio."
		/>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="generator" content={Astro.generator} />

		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon_pure.svg`} />
	</head>

	<body class="bg-white font-sans text-black antialiased">
		<!-- Navbar 只负责自身布局，不限制页面宽度 -->
		<Navbar />

		<!-- 页面滚动 / snap / grid 全部由 index.astro 决定 -->
		<slot />

		<Footer />

		<style is:global>
			/* ===============================
			   Global scrolling behavior
			================================ */
			html,
			body {
				margin: 0;
				padding: 0;
				width: 100%;
				height: 100%;
			}

			/* 平滑滚动（为 scroll-snap 服务） */
			html {
				scroll-behavior: smooth;
			}

			/* 防止滚动“反弹/穿透” */
			body {
				overscroll-behavior: none;
			}

			/* 图片性能优化 */
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>
